---
jira_key: {{ key }}
jira_summary: {{ fields.summary }}
jira_type: {{ fields.issuetype.name }}
jira_status: {{ fields.status.name }}
jira_priority: {{ fields.priority.name }}
jira_project: {{ fields.project.key }}
jira_assignee: "[[{{ fields.assignee.displayName }}]]"
jira_reporter: "[[{{ fields.reporter.displayName }}]]"
jira_fixVersions: [{% for v in fields.fixVersions %}"{{ v.name }}"{% if not loop.last %}, {% endif %}{% endfor %}]
jira_components: [{% for c in fields.components %}"{{ c.name }}"{% if not loop.last %}, {% endif %}{% endfor %}]
jira_labels: [{% for l in fields.labels %}"{{ l }}"{% if not loop.last %}, {% endif %}{% endfor %}]
jira_link: {{ browseUrl or (baseUrl + '/browse/' + key) }}
---
# [[{{ key }}]] {{ fields.summary }}

